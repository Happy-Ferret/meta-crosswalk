From 18e7800bab5f1759c4f74b26cda88148c4d54c73 Mon Sep 17 00:00:00 2001
From: Joone Hur <joone.hur@intel.com>
Date: Thu, 6 Jul 2017 18:03:10 -0700
Subject: [PATCH 10/25] change the default display size

---
 services/ui/ws/platform_display_default.cc | 2 +-
 ui/display/manager/managed_display_info.cc | 4 ++--
 2 files changed, 3 insertions(+), 3 deletions(-)

diff --git a/services/ui/ws/platform_display_default.cc b/services/ui/ws/platform_display_default.cc
index 860beaf..d576a8d 100644
--- a/services/ui/ws/platform_display_default.cc
+++ b/services/ui/ws/platform_display_default.cc
@@ -72,7 +72,7 @@ void PlatformDisplayDefault::Init(PlatformDisplayDelegate* delegate) {
   platform_window_->SetBounds(bounds);
 #elif defined(USE_OZONE)
   platform_window_ =
-      delegate_->GetOzonePlatform()->CreatePlatformWindow(this, gfx::Rect(2160, 1440));
+      delegate_->GetOzonePlatform()->CreatePlatformWindow(this, bounds);
 #else
   NOTREACHED() << "Unsupported platform";
 #endif
diff --git a/ui/display/manager/managed_display_info.cc b/ui/display/manager/managed_display_info.cc
index a0bb369..8aeb5c5 100644
--- a/ui/display/manager/managed_display_info.cc
+++ b/ui/display/manager/managed_display_info.cc
@@ -178,8 +178,8 @@ ManagedDisplayInfo ManagedDisplayInfo::CreateFromSpecWithID(
   // Default bounds for a display.
   const int kDefaultHostWindowX = 0;
   const int kDefaultHostWindowY = 0;
-  const int kDefaultHostWindowWidth = 2160;
-  const int kDefaultHostWindowHeight = 1440;
+  const int kDefaultHostWindowWidth = 1920;
+  const int kDefaultHostWindowHeight = 1080;
   gfx::Rect bounds_in_native(kDefaultHostWindowX, kDefaultHostWindowY,
                              kDefaultHostWindowWidth, kDefaultHostWindowHeight);
 #endif
